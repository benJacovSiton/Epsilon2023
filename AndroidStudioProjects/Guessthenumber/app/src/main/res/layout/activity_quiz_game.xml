<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/QuizLayout"
    android:background="@drawable/background7">

    <ImageView
        android:id="@+id/QuizIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sport"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/QuizTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/QuizClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:15"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <EditText
            android:id="@+id/QuizAnsEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:gravity="center"
            android:hint="המספר שלך"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/QuizAnsTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:gravity="center"
            android:textSize="19sp"
            android:textStyle="italic"
            android:hint="תשובת המחשב"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/QuizQuestionNumTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="number"
        android:text="1/10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/QuizV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
        <View
            android:id="@+id/QuizV10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#808080"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/QuizScoreTv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="הניקוד שלך : "
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/QuizScoreTv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="הניקוד של היריב : "
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/QuizButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="22dp"
        android:text="יאללה"
        android:gravity="center"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"/>


</LinearLayout>